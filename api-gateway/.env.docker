# Docker Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================
# NODE ENVIRONMENT
# ============================================================
NODE_ENV=production
PORT=3001

# ============================================================
# DATABASE
# ============================================================
# Local PostgreSQL in docker-compose
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/trinity
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=trinity
DB_HOST=postgres
DB_PORT=5432

# ============================================================
# SUPABASE (Optional - use local postgres above or Supabase)
# ============================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key

# ============================================================
# STRIPE
# ============================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key

# ============================================================
# JWT / AUTHENTICATION
# ============================================================
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRE=7d

# ============================================================
# REDIS (for queues)
# ============================================================
# Use Redis from docker-compose service
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=redis123

# ============================================================
# PYTHON SERVICE (if running locally)
# ============================================================
PYTHON_SERVICE_URL=http://python-service:8000

# ============================================================
# LOGGING
# ============================================================
LOG_LEVEL=info
LOG_DIR=./logs
MAX_LOG_SIZE=10485760  # 10MB
LOG_RETENTION_DAYS=30

# ============================================================
# CORS
# ============================================================
CORS_ORIGIN=http://localhost:8080,http://localhost:3000,https://trinity-app.com

# ============================================================
# RATE LIMITING
# ============================================================
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes

# ============================================================
# EMAIL (for queue-based email sending)
# ============================================================
ALERT_EMAIL=admin@example.com
ALERT_EMAIL_SERVICE=smtp.gmail.com
ALERT_EMAIL_PORT=587
ALERT_EMAIL_USER=your_email@gmail.com
ALERT_EMAIL_PASS=your_app_specific_password
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ============================================================
# FEATURE FLAGS
# ============================================================
ENABLE_ANALYSIS_QUEUE=true
ENABLE_RETRAINING_QUEUE=true
ENABLE_REPORT_QUEUE=true
ENABLE_EMAIL_QUEUE=true
ENABLE_NOTIFICATION_QUEUE=true

# ============================================================
# MONITORING
# ============================================================
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_INTERVAL=30000
METRICS_COLLECTION_ENABLED=true

# ============================================================
# DEVELOPMENT/DEBUG (Set to false in production)
# ============================================================
DEBUG=false
VERBOSE_LOGGING=false

      "key": "authToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "",
      "type": "string"
    },
    {
      "key": "contextId",
      "value": "",
      "type": "string"
    },
    {
      "key": "analysisJobId",
      "value": "",
      "type": "string"
    },
    {
      "key": "analysisId",
      "value": "",
      "type": "string"
    },
    {
      "key": "retrainJobId",
      "value": "",
      "type": "string"
    }
  ]
}

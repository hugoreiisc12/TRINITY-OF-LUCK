{
  "info": {
    "name": "Trinity API Gateway",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "a214f3f0-3ba5-4b8b-8a6d-3e8fb1b6c1b2"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "health"
          ]
        }
      }
    },
    {
      "name": "API Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/health",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "health"
          ]
        }
      }
    },
    {
      "name": "Import Context (Polymarket)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"url\": \"https://polymarket.com/markets\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/import-context",
          "host": ["{{baseUrl}}"],
          "path": ["api", "import-context"]
        }
      }
    },
    {
      "name": "Upload CSV",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt}}" }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "file", "type": "file", "src": "../../sample-data.csv" }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/api/upload",
          "host": ["{{baseUrl}}"],
          "path": ["api", "upload"]
        }
      }
    },
    {
      "name": "Results (by ID)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/results/{{analysisId}}?recalculate=false",
          "host": ["{{baseUrl}}"],
          "path": ["api", "results", "{{analysisId}}"],
          "query": [
            { "key": "recalculate", "value": "false" }
          ]
        }
      }
    },
    {
      "name": "Feedback",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"analysisId\": \"{{analysisId}}\",\n  \"result\": \"vitoria\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/feedback",
          "host": ["{{baseUrl}}"],
          "path": ["api", "feedback"]
        }
      }
    }
  ]
}
